{
  "api": {
    "use_external_service": false,
    "timeout": 300,
    "internal_service": {
      "protocol": "http",
      "host": null,
      "port": null
    },
    "external_service": {
      "protocol": "https",
      "host": null,
      "port": 443,
      "username": null,
      "password": null
    }
  },
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "format": "wav",
    "chunk_size": 1024
  },
  "recording": {
    "directory": "~/.local/share/voice-typing-system/recordings",
    "max_duration": 600,
    "save_on_abort": true
  },
  "hotkey": {
    "combination": "ctrl+shift+t"
  },
  "ui": {
    "tray_icon_idle_color": "#808080",
    "tray_icon_recording_color": "#ff0000"
  },
  "logging": {
    "level": "DEBUG",
    "file": "~/.local/share/voice-typing-system/logs/app.log"
  },
  "post_processing": {
    "remove_thanks_for_watching": true
  }
} 